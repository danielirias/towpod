<?xml version="1.0" encoding="utf-8"?>


<LinearLayout android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    xmlns:android="http://schemas.android.com/apk/res/android"
    android:padding="15dp">


    <TextView
        android:text="Datos del vehiculo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/lblInfoSelectedCar"
        android:textStyle="normal|bold"
        android:textColor="@color/colorPrimary"
        android:layout_marginLeft="10dp" />

    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp">

        <RadioButton
            android:text="Pagar la matrícula de mi vehículo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/option1"
            android:layout_weight="1"
            android:checked="false"
            android:enabled="false" />

        <RadioButton
            android:text="Eliminar el vehículo seleccionado"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/option2"
            android:layout_weight="1"
            android:checked="true" />

    </RadioGroup>

    <TextView
        android:text="Eliminar un vehículo tambien eliminará cualquier póliza de seguro asignada al mismo."
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView45"
        android:layout_weight="1"
        android:textColor="@color/colorAccent"
        android:textStyle="normal|italic" />

</LinearLayout>
