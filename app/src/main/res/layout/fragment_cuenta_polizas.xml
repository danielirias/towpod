<LinearLayout xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="#f2f2f2">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:background="#bec3c7">

        <RelativeLayout
            android:layout_width="80sp"
            android:layout_height="80sp"
            android:id="@+id/rlCatIcon"
            android:background="@drawable/customcatbg"
            android:padding="0dp">

            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:src="@drawable/userwhite"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight=".66"
            android:paddingLeft="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:id="@+id/txtNombreProveedor"
                android:textStyle="bold"
                android:shadowColor="#212121"
                android:textColor="?attr/colorPrimary"
                android:text="Daniel"
                android:layout_centerVertical="true"
                android:layout_alignParentStart="true" />

        </RelativeLayout>

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#fff"
        android:padding="10dp">

        <TextView
            android:text="Adquiere tu póliza de seguro."
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView16"
            android:layout_weight="1" />

        <Button
            android:text="Contratar póliza"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnNuevaPoliza"
            android:layout_weight="1"
            style="@style/Widget.AppCompat.Button.Colored"
            android:onClick="ContratarPoliza" />
    </LinearLayout>

    <ListView
        android:id="@+id/ListViewPolizas"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fastScrollEnabled="true"
        android:verticalSpacing="0sp"
        android:horizontalSpacing="0sp"
        android:dividerHeight="0sp"
        android:divider="#FFF"
        android:background="#f2f2f2">
    </ListView>


</LinearLayout>